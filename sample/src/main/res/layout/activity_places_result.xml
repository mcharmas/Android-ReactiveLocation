<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="pl.charmas.android.reactivelocation.sample.PlacesResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Selected place name"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/place_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sample place name" />

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Location for selected place"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/place_location_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sample place location" />

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Address for selected place"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/place_address_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sample address for place" />

    </LinearLayout>
</ScrollView>
